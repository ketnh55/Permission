{{ form_start(form,{'attr':{'class':'form-horizontal'}}) }}
{{ form_errors(form) }}
<div class="panel panel-info">
    <div class="panel-heading">
        <h6 class="panel-title"><i class="icon-bubble4"></i>Điền đầy đủ thông tin dưới đây</h6>
    </div>
    <div class="panel-body">
        <div class="form-group">
            {{ form_label(form.congdan, null,{'label_attr': {'class': 'col-sm-2 control-label'}}) }}

            <div class="col-sm-10">
                {{ form_widget(form.congdan,{'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.congdan,{'attr': {'class': 'form-control'}}) }}
                <a href="#" onclick="window.open('{{path('tableCongdan',{'idElement':'Hosotthc_congdan'})}}', 'name', 'height=500,width=800');">Tìm Nhanh</a><br/>
                <a href="#" onclick="window.open('{{path('createCitizen')}}', 'name', 'height=500,width=1000');">Tạo mới</a>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">Đính kèm *</label>
        </div>
        {%for dinhkemnhan in form.dinhkemnhanhs%}
        <div class="form-group">
            <label class="col-sm-2 control-label">{{form.vars.value.dinhkemnhanhs[loop.index0].dinhkemtthc.tenfiledk}}</label>
            <div class="col-sm-10">
                <input type="hidden" id="Hosotthc_dinhkemnhanhs_{{loop.index0}}_dinhkemtthc" name="Hosotthc[dinhkemnhanhs][{{loop.index0}}][dinhkemtthc]" value="{{form.vars.value.dinhkemnhanhs[loop.index0].dinhkemtthc.iddinhkemtthc}}" />
                {{ form_widget(dinhkemnhan.tenfiledinhkem,{'attr': {'value': form.vars.value.dinhkemnhanhs[loop.index0].dinhkemtthc.tenfiledk}}) }} OK
                {{ form_errors(dinhkemnhan.tenfiledinhkem,{'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
        {%endfor%}
        <div class="form-group">           
            <label class="col-sm-2 control-label">Ngày nhận</label>
            <div class="col-sm-10">
                <div class="col-sm-2">
                    <label>Ngày</label>
                    <input type="text" id="Hosotthc_ngaynhan_day" name="Hosotthc[ngaynhan][day]" value="{{'now'|date('d')}}" class="form-control" readonly="true">
                </div>
                <div class="col-sm-2">
                    <label>Tháng</label>
                    <input type="text" id="Hosotthc_ngaynhan_month" name="Hosotthc[ngaynhan][month]" value="{{'now'|date('m')}}" class="form-control" readonly="true">
                </div>
                <div class="col-sm-2">
                    <label>Năm</label>
                    <input type="text" id="Hosotthc_ngaynhan_year" name="Hosotthc[ngaynhan][year]" value="{{'now'|date('Y')}}" class="form-control" readonly="true">
                </div>
            </div>

        </div>
        <div class="form-group">           
            <label class="col-sm-2 control-label">Ngày hẹn trả</label>
            <div class="col-sm-10">
                <div class="col-sm-2">
                    <label>Ngày</label>
                    <input type="text" id="Hosotthc_ngayhentra_day" name="Hosotthc[ngayhentra][day]" value="{{'now'|date('d')}}" class="form-control">
                </div>
                <div class="col-sm-2">
                    <label>Tháng</label>
                    <input type="text" id="Hosotthc_ngayhentra_month" name="Hosotthc[ngayhentra][month]" value="{{'now'|date('m')}}" class="form-control">
                </div>
                <div class="col-sm-2">
                    <label>Năm</label>
                    <input type="text" id="Hosotthc_ngayhentra_year" name="Hosotthc[ngayhentra][year]" value="{{'now'|date('Y')}}" class="form-control">
                </div>
            </div>
        </div>
        <div class="form-actions text-right">
             {{ form_widget(form.submit,{'attr': {'class': 'btn btn-primary'}}) }}


        </div>
    </div>
</div>
{#</div>#}
{{ form_widget(form._token) }}
{{form_end(form, {'render_rest': false})}}
<script>
    $('#Hosotthc_submit').submit(function(e) {
        // specify a unique target name
        var target = '{{path("reception")}}';
        window.open('', target);
        this.setAttribute('target', target);
    });
</script>



