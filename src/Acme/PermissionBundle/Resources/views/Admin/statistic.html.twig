{% extends "AcmePermissionBundle::Admin/baseAdmin.html.twig"%}
{% block javascript%}
    {{parent()}}
    {% javascripts 
                    '@AcmePermissionBundle/Resources/public/bootstrap/js/plugins/interface/datatables.min.js'        
    %}        
<script type="text/javascript" src="{{ asset_url }}"></script>        
    {% endjavascripts %}     
{%endblock%}
{%block title%}
<title>Thống kê hệ thống</title>
{%endblock%}
{%block pagetitle%}
<h3>Thống kê hệ thống<small>Hệ thống dịch vụ công - {{app.user.tenant.tendonvi}}</small></h3>
{%endblock%}
{%block content %}
<div class="tabbable page-tabs">
    <ul class="nav nav-tabs">
        <li class="active"><a href="#inside" data-toggle="tab"><i class="icon-user3"></i> Thống kê người dùng</a></li>
        <li><a href="#outside" data-toggle="tab"><i class="icon-storage"></i> Thống kê lĩnh vực hành chính</a></li>
        <li><a href="#advanced" data-toggle="tab"><i class="icon-leaf"></i> Thống kê thủ tục hành chính</a></li>
        <li><a href="#ok" data-toggle="tab"><i class="icon-folder8"></i>Thống kê đợn vị thụ lý</a></li>
    </ul>
    <div class="tab-content">
        <div class="tab-pane fade active in" id="inside">     
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h6 class="panel-title"><i class="icon-user3"></i> Thống kê người dùng</h6>
                </div>
                <div class="datatable">
                    <div id="DataTables_Table_0_wrapper" class="dataTables_wrapper" role="grid">
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                <td>Id</td>
                                <td>Tên đăng nhập</td>
                                <td>Họ tên</td>
                                <td>Trách nhiệm</td>
                                </thead>
                            {% for user in users%}
                                {% if loop.index %2 == 0 %}
                                <tr class="odd">
                                {% else %}
                                <tr class="even">
                                {% endif%}
                                    <td>{{user.id}}</td>
                                    <td>{{user.username}}</td>
                                    <td>{{user.hoten}}</td>
                                    <td>
                                        {% for role in user.role%}
                                            {{role.name}},
                                        {%endfor%}
                                    </td>

                                </tr>
                            {%endfor%}
                            </table>
                        </div>            
                    </div>
                </div>
            </div>
        </div>
        <div class="tab-pane fade active in" id="outside">     
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h6 class="panel-title"><i class="icon-storage"></i> Thống kê lĩnh vực hành chính</h6>
                </div>
                <div class="datatable">
                    <div id="DataTables_Table_0_wrapper" class="dataTables_wrapper" role="grid">
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                <td>Id</td>
                                <td>Tên lĩnh vực</td>
                                <td>Mô tả</td>                                    
                                </thead>
                            {% for linhvuc in lv%}
                                {% if loop.index %2 == 0 %}
                                <tr class="odd">
                                {% else %}
                                <tr class="even">
                                {% endif%}
                                    <td>{{linhvuc.idlinhvuc}}</td>
                                    <td>{{linhvuc.namedv}}</td>
                                    <td>{{linhvuc.motalinhvuc}}</td>
                                </tr>
                            {%endfor%}
                            </table>
                        </div>            
                    </div>
                </div>
            </div>
        </div>
        <div class="tab-pane fade active in" id="advanced">     
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h6 class="panel-title"><i class="icon-leaf"></i> Thống kê thủ tục hành chính</h6>
                </div>
                <div class="datatable">
                    <div id="DataTables_Table_0_wrapper" class="dataTables_wrapper" role="grid">
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                <td>Id</td>
                                <td>Tên thủ tục</td>
                                <td>Lĩnh vực</td>
                                <td>Niêm yết</td>
                                </thead>
                            {% for tt in tthc%}
                                {% if loop.index %2 == 0 %}
                                <tr class="odd">
                                {% else %}
                                <tr class="even">
                                {% endif%}
                                    <td>{{tt.idtthc}}</td>
                                    <td>{{tt.nametthc}}</td>
                                    <td>{{tt.linhvuc.namedv}}</td>
                                    {%if tt.ishide%}
                                   <td>Đã niêm yết</td>
                                   {%else%}
                                   <td>Chưa niêm yết</td>
                                   {%endif%}
                                </tr>
                            {%endfor%}
                            </table>
                        </div>            
                    </div>
                </div>
            </div>
        </div>
        <div class="tab-pane fade active in" id="ok">     
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h6 class="panel-title"><i class="icon-folder8"></i> Thống kê đơn vị thụ lý</h6>
                </div>
                <div class="datatable">
                    <div id="DataTables_Table_0_wrapper" class="dataTables_wrapper" role="grid">
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                <td>Id</td>
                                <td>Tên đơn vị</td>
                                <td>Mô tả</td>   
                                <td>Địa chỉ</td>   
                                <td>Mã đơn vị</td>   
                                </thead>
                            {% for dv in dvtl%}
                                {% if loop.index %2 == 0 %}
                                <tr class="odd">
                                {% else %}
                                <tr class="even">
                                {% endif%}
                                    <td>{{dv.iddonvithuly}}</td>
                                    <td>{{dv.namedonvithuly}}</td>
                                    <td>{{dv.mota}}</td>
                                    <td>{{dv.diachi}}</td>
                                    <td>{{dv.madonvi}}</td>
                                </tr>
                            {%endfor%}
                            </table>
                        </div>            
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock%}