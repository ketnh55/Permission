{%extends "AcmePermissionBundle::Admin/baseAdmin.html.twig"%}
{% block content%}
{{ form_start(form,{'attr':{'class':'form-horizontal'}}) }}
{{ form_errors(form) }}
<div class="panel panel-primary">
    <div class="panel-heading">
        <h6 class="panel-title"><i class="icon-bubble4"></i>Thay đổi quyền với thủ tục hành chính: <b>{{quyentthc.tthc.nametthc}}</b></h6>
    </div>
    <div class="panel-body">
        {% if alert|default is not empty %}
        <div class="alert alert-success fade in block-inner">
            <button type="button" class="close" data-dismiss="alert">×</button>
            {{alert}}
        </div>
        {% endif%}
        <div class="form-group">
            {{ form_label(form.quyenhan, null,{'label_attr': {'class': 'col-sm-2 control-label'}}) }}
            <div class="col-sm-10">
                {{ form_widget(form.quyenhan,{'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.quyenhan) }}
            </div>
        </div>
        <div class="form-group">
            {{ form_label(form.tthc, null,{'label_attr': {'class': 'col-sm-2 control-label'}}) }}
            <div class="col-sm-10">
                {{ form_widget(form.tthc,{'attr': {'class': 'form-control','disabled':'true'}}) }}
                <input type="hidden" name="quyentthc[tthc]" value="{{form.vars.value.tthc.idtthc}}">
                {{ form_errors(form.tthc) }}
            </div>
        </div>
        <div class="form-group">
            {{ form_label(form.user, null,{'label_attr': {'class': 'col-sm-2 control-label'}}) }}
            <div class="col-sm-10">
                {{ form_widget(form.user,{'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.user) }}
                <a href="#" onclick="window.open('{{path('tableUser',{'idElement':'quyentthc_user'})}}', 'name', 'height=500,width=800')">Tìm Nhanh</a>
            </div>

        </div>
        <div class="form-actions text-right">
             {{ form_widget(form.submit,{'attr': {'class': 'btn btn-primary'}}) }}
        </div>
    </div>
</div>
{{form_end(form)}}
{%endblock%}

